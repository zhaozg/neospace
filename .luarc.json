{
    "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
    "runtime.version": "LuaJIT",
    "Lua.format.enable": false,
    "Lua.format.defaultConfig": {
        "indent_style": "space",
        "indent_size": "2"
    },
    "config": {
        "diagnostics": {
            "enable": true,
            "globals": [
                "vim"
            ],
            "neededFileStatus": "Opened",
            "severity": {
                "redefined-local": "Warning",
                "emmy-lua": "Hint"
            }
        }
    }
}
